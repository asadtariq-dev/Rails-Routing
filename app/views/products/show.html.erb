<div class="pt-5">
<h2><strong><%= @product.name%></strong></h2>
<p><%= @product.description%></p>
<p>
  <strong>Price: </strong>
  <%= number_to_currency(number_to_human(@product.price), unit:'RS ') %>
</p>
<p>
<%= link_to "Delete", product_path(@product), class: "delete-button", data: { turbo_method: :delete,
    turbo_confirm: "Are you sure?" } %>
  <%= link_to 'Edit', edit_product_path(@product) %>
  <%= link_to 'Back', products_path %>
</p>
</div>
